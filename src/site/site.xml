<project xmlns="http://maven.apache.org/DECORATION/1.7.0"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="
				http://maven.apache.org/DECORATION/1.7.0
				decoration-1.7.0.xsd">
	<!-- http://maven.apache.org/xsd/decoration-1.7.0.xsd -->

	<poweredBy>
		<logo name="${project.name}" href="http://shark.kubiczak.pl/" img="/images/logo.png"/>
	</poweredBy>

	<skin>
		<groupId>org.apache.maven.skins</groupId>
		<artifactId>maven-fluido-skin</artifactId>
		<version>1.5</version>
	</skin>

	<body>
		<head><![CDATA[
			<style>
				#poweredBy iframe {
					width: 80px ! important;
				}
			</style>]]>
		</head>
		<menu ref="reports" inherit="top"/>
	</body>

	<custom>
		<fluidoSkin>
			<sideBarEnabled>true</sideBarEnabled>

			<gitHub>
				<projectId>wiiitek/${project.artifactId}</projectId>
				<ribbonOrientation>right</ribbonOrientation>
				<ribbonColor>gray</ribbonColor>
			</gitHub>
			<facebookLike/>

		</fluidoSkin>
	</custom>

</project>
